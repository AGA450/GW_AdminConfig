                                                <th>Name</th>
                                                <th>Value</th>
                                                <th>Description</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr class="set-@item.Name">

                                                    <td>
                                                        @item.Name
                                                    </td>
                                                    <td>
                                                        @item.Value
                                                    </td>
                                                <td noedit="true">
                                                        @item.Description
                                                    </td>

                                                <td noedit="true">
                                                    <div class="tools">
                                                        <button type="button" data-set="@item.Name" class="btn btn-primary btnaction">Edit</button>
                                                       
